{% block html_head_container %}

{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}

	<body class="{{body_class}}" data-template="base.twig">
		{% if post.meta('background_image') is not empty %}
			<div id="page-background-img">
				{{ fn('wp_get_attachment_image', post.meta('background_image').id, 'fullsize') }}
			</div>
		{% endif %}

		{% block header %}
			{{ include('partials/site_header.twig') }}
		{% endblock %}

		<section id="content" role="main" class="content-wrapper">
			{% if title %}<h1>{{title}}</h1>{% endif %}
			<div class="wrapper {{sidebar_class}}">
				{% block content %}
					Sorry, no content
				{% endblock %}
			</div>
			{% if sidebar %}
				<aside class="layout-sidebar">
					{{sidebar}}
				</aside>
			{% endif %}
		</section>

		{% block footer %}
			{{ include('partials/site_footer.twig') }}
			{{ function('wp_footer') }}
		{% endblock %}
	</body>
</html>
